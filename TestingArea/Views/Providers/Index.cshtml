@model IEnumerable<TestingArea.Models.Provider>

@{
    ViewBag.Title = "Providers";
}

<h2>Providers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProviderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abbreviation)
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProviderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProviderID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProviderID })
            </td>
        </tr>
    }

</table>